<shortcuts>
<programGroup defaultName="JVector" location="applications"/>
   <shortcut
      name="JVector"
      target="$INSTALL_PATH\JVector.jar"
	  workingDirectory="$INSTALL_PATH"	  
      description="Launch JVector!"
      iconFile="$INSTALL_PATH\icons\jvi.ico"
      initialState="normal"
      programGroup="yes"      
      desktop="yes"
      applications="no"
      startMenu="no"
      startup="no">
   </shortcut>   
   <shortcut
      name="Uninstall"
      target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
	  workingDirectory="$INSTALL_PATH"
      description="Uninstall JVector"
      iconFile="$INSTALL_PATH\icons\jvi-uninstall.ico"
      initialState="normal"
      programGroup="yes"      
      desktop="no"
      applications="no"
      startMenu="no"
      startup="no">
   </shortcut>
</shortcuts>